{
    "name": "Yangify",
    "short_name": "yang",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "description": "Replace 'Greta Thunberg' with 'Yang Gang'",
    "icons": {
        "16": "yang_gang_16.png",
        "48": "yang_gang_48.png",
        "128": "yang_gang_128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Yangify",
        "default_icon": "favicon&logo.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs", "storage", "activeTab"]
}